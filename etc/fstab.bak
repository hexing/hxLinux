# 
# /etc/fstab: static file system information
#
# <file system>        <dir>         <type>    <options>          <dump> <pass>
devpts                 /dev/pts      devpts    defaults            0      0
shm                    /dev/shm      tmpfs     defaults,nodev,nosuid,noatime,nodiratime,mode=1777,size=3g        0      0

#/dev/cdrom             /media/cd   auto    ro,user,noauto,unhide   0      0
#/dev/dvd               /media/dvd  auto    ro,user,noauto,unhide   0      0
#/dev/fd0               /media/fl   auto    user,noauto             0      0

UUID=197aeab4-e130-4ff9-bbe7-2bab7f04a8b5 /boot ext4 defaults,noatime,nodiratime 0 0
UUID=9a5d9f08-cfba-4a8c-b022-e1a9d9f761ce /home ext4 defaults,noatime,nodiratime 0 0
UUID=a71659e6-cabd-4441-bc8c-2f03c23dc53f /usr ext4 defaults,noatime,nodiratime 0 0
UUID=c7bfc80f-68f9-4e1d-be3a-7b21878d2de3 /var ext4 defaults,noatime,nodiratime 0 0
UUID=05c97a47-148c-4e9f-9ef2-b836bc13d17d /opt ext4 defaults,noatime,nodiratime 0 0
UUID=b311cbbb-256e-450e-9540-e0ebd87172df / ext4 defaults,noatime,nodiratime 0 0

/dev/shm /tmp none bind 0 0
/dev/shm /var/tmp none bind 0 0

/var/lib/pacmanDB.fs /var/lib/pacman reiserfs async,noatime,nodiratime,data=writeback,loop 0 0
